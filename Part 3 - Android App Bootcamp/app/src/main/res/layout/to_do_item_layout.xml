<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:longClickable="true">

    <TextView
        android:id="@+id/item_name_text_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/item_date_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_urgency_text_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="0.65"
        app:layout_constraintVertical_weight="0.75"
        android:gravity="center"
        android:text="@string/item_name_text"
        android:textSize="25sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/item_urgency_text_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/item_name_text_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="0.35"
        android:gravity="center"
        android:text="@string/item_urgency_text"
        android:textSize="20sp"
        android:textColor="#ff0000"/>

    <TextView
        android:id="@+id/item_date_text_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_urgency_text_view"
        app:layout_constraintTop_toBottomOf="@+id/item_name_text_view"
        app:layout_constraintVertical_weight="0.25"
        android:gravity="center"
        android:text="@string/item_name_text"
        android:textSize="15sp"
        android:textColor="#666666"/>

</android.support.constraint.ConstraintLayout>